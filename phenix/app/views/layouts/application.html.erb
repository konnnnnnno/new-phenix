<!DOCTYPE html>
<html>
  <head>
    <title>Phenix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag %>
  </head>

  <body>
    <header>
  <div class="header-logo">
    <% if @current_user %>
      <%= link_to("フェニックス", "/index") %>
    <% else %>
      <%= link_to("フェニックス", "/") %>
    <% end %>
  </div>
  <ul class="header-menus">
    <% if @current_user %>
    <li>
      <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
    </li>
    <li>
      <%=link_to("このSNSの説明","/about")%>
    </li>
    <li>
        <%=link_to("新規投稿","posts/new")%>
    </li>
    <li>
      <%= link_to("ユーザー一覧", "/users/index") %>
    </li>
    <li>
      <%= link_to("新規登録", "/signup") %>
    </li>
    <li>
      <%= link_to("ログアウト", "/logout", {method: :post}) %>
    </li>
    <% else %>
    <li>
      <%=link_to("このSNSの説明","/about")%>
    </li>
    <li>
      <%= link_to("新規登録", "/signup") %>
    </li>
    <li>
      <%= link_to("ログイン", "/login") %>
    </li>
    <% end %>
  </ul>
</header>
  <% if flash[:notice] %>
  <div class="flash">
  <%= flash[:notice] %>
  </div>
  <% end %>
  <%= yield %>
  </body>
</html>
